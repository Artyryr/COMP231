@model LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewBag.Image = "url('/images/registration.jpg')";
    ViewBag.Title = "User Registration";
    ViewBag.PageName = "User Registration";
}

<div class="row d-flex">
    <div class="col-md-12 ftco-animate makereservation p-5 bg-light fadeInUp ftco-animated">
        <form action="" method="post">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Email">E-mail</label>
                        <input asp-for="Email" type="email" class="form-control" data-val="true" data-val-required="The E-mail is required.">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="User.FirstName">First Name</label>
                        <input asp-for="User.FirstName " type="text" class="form-control" placeholder="First Name" data-val="true" data-val-required="The First Name is required.">
                        <span asp-validation-for="User.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="User.LastName">Last Name</label>
                        <input asp-for="User.LastName" type="text" class="form-control" placeholder="Last Name" data-val="true" data-val-required="The Last Name is required.">
                        <span asp-validation-for="User.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" name="Password" data-val="true" data-val-required="The Password is required.">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input asp-for="ConfirmationPassword" type="password" class="form-control" placeholder="Confirm Password" data-val="true" data-val-required="The Confirmed Password Name is recuired.">
                        <span asp-validation-for="ConfirmationPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Apartment</label>
                        <input asp-for="User.Apartment" type="text" class="form-control" placeholder="Apartment" data-val="true" data-val-required="The Apartment number is required.">
                        <span asp-validation-for="User.Apartment" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Street</label>
                        <input asp-for="User.Street" type="text" class="form-control" placeholder="Street" data-val="true" data-val-required="The Street is required.">
                        <span asp-validation-for="User.Street" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>City</label>
                        <input asp-for="User.City" type="text" class="form-control" placeholder="City" data-val="true" data-val-required="The City is required.">
                        <span asp-validation-for="User.City" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Zip</label>
                        <input asp-for="User.ZIP" type="text" class="form-control" placeholder="ZIP" data-val="true" data-val-required="The ZIP is required.">
                        <span asp-validation-for="User.ZIP" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Province</label>
                        <select asp-for="User.Province" class="form-control" data-val="true" data-val-required="The Province is required.">
                            <option value="">No Province</option>
                            <option value="AB">AB</option>
                            <option value="BC">BC</option>
                            <option value="MB">MB</option>
                            <option value="NB">NB</option>
                            <option value="NL">NL</option>
                            <option value="NS">NS</option>
                            <option value="NT">NT</option>
                            <option value="NU">NU</option>
                            <option value="ON">ON</option>
                            <option value="PE">PE</option>
                            <option value="QC">QC</option>
                            <option value="SK">SK</option>
                            <option value="YT">YT</option>
                        </select>
                        @*<input asp-for="User.Province" type="text" class="form-control" placeholder="Province" data-val="true" data-val-required="The Province is required.">*@
                        <span asp-validation-for="User.Province" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Telephone</label>
                        <input asp-for="User.Telephone" type="text" class="form-control" placeholder="Telephone" data-val="true" data-val-required="The Telephone is required.">
                        <span asp-validation-for="User.Telephone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 text-danger" asp-validation-summary="All"></div>
                <div class="col-md-12 mt-3 text-center">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary py-3 px-5 text-center">Register</button>
                    </div>
                </div>
                <div class="col-md-12 mt-3 text-center">
                    <div class="form-group">
                        <a asp-action="LoginPage" class="py-3 px-5 text-center">Already registered?</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>